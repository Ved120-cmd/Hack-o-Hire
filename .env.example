# PostgreSQL Database Configuration
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_DB=sar_audit
POSTGRES_PORT=5432
POSTGRES_HOST=localhost

# Database URL (auto-constructed if not set)
# DATABASE_URL=postgresql://user:password@localhost:5432/sar_audit

# JWT Auth
JWT_SECRET_KEY=change-me-in-production-use-openssl-rand-hex-32
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=480

# LLM Configuration
LLM_PROVIDER=ollama
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3
LLM_TEMPERATURE=0.3

# Claude API (if using LLM_PROVIDER=claude)
CLAUDE_API_KEY=
CLAUDE_MODEL=claude-3-sonnet-20240229

# ChromaDB
CHROMA_DB_PATH=./chroma_db
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Alerting
RISK_ALERT_THRESHOLD=0.75

# Application
ENVIRONMENT=development
DEBUG=True
CORS_ORIGINS=http://localhost:5173,http://localhost:3000
